<vbox md="12" class="p-8">
  {{#paper-card class="bc-white teams-top-10 o-a" as |card|}}
    {{#card.title as |title|}}
      {{#title.text as |text|}}
        {{#text.headline}}Select who you are{{/text.headline}}
        {{#text.subhead}}You need to link up your account to your existing user.{{/text.subhead}}
      {{/title.text}}
    {{/card.title}}
    {{#card.content}}
      {{#each nonLinkedFoosers as |foosballer|}}
        {{#paper-radio groupValue=selectedFoosballer value=foosballer onChange=(action 'selectUser')}}{{foosballer.name}}{{/paper-radio}}
      {{/each}}
    {{/card.content}}
  {{/paper-card}}

  {{#paper-button primary=true raised=true onClick=(action 'linkUser')}}Link User{{/paper-button}}
</vbox>
