<vbox md="4" class="p-8">
  {{partial 'foosballer/profile-card'}}

  {{partial 'trends'}}

  {{partial 'footer-links'}}
</vbox>
<box md="8" class="p-8 o-a">
  {{#each sortedGames as |game index|}}
    <box class="bc-white p-8 home-game">
      <hbox justify="between" class="home-game-hbox">
        <div class="fs-s pr-8 index">{{plus-one index}}</div>
        <div class="c-primary d-ib fs-m winners">
          {{game.winningTeam.player1.displayName}}
          {{game.winningTeam.player2.displayName}}
        </div>
        <div class="ta-c d-ib dash">{{game.winningTeamWins}} - {{game.losingTeamWins}}</div>
        <div class="d-ib fs-m losers">
          {{game.losingTeam.player1.displayName}}
          {{game.losingTeam.player2.displayName}}
        </div>
        <small class="d-ib time ta-r"><i>{{moment-format game.time "MMM. Do @ h:mm a"}}</i></small>
      </hbox>
    </box>
  {{/each}}

  {{!--
    {{#index-plus-one index=index numItems=sortedGames.length as |rank count|}}
      {{#paper-item param=game action="expandGame"}}
        {{game-display game=game expandedId=expandedId count=count}}
      {{/paper-item}}
    {{/index-plus-one}}
    <small class="pr-16 d-b mb-8 ta-r"><i>{{moment-format game.time "MMM. Do, YYYY @ h:mm a"}}</i></small>
    {{paper-divider class="theme"}}
  {{/each}}
  --}}
</box>
