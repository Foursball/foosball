{{#if isScoringGame}}
  {{#paper-card class='bc-white' as |card|}}
    {{#card.content}}
      <h4>{{game.team1.player1.displayName}} & {{game.team1.player2.displayName}}</h4>
      {{paper-input label='Wins' value=game.team1Wins type="number" onChange=(action (mut game.team1Wins))}}
      <h4>{{game.team2.player1.displayName}} & {{game.team2.player2.displayName}}</h4>
      {{paper-input label='Wins' value=game.team2Wins type="number" onChange=(action (mut game.team2Wins))}}
    {{/card.content}}
    {{#card.actions}}
      {{#paper-button onClick=(action 'cancelGame')}}{{cancelOrDelete}}{{/paper-button}}
      {{#paper-button raised=true primary=true onClick=(action 'saveGame') disabled=cannotSave}}Save{{/paper-button}}
    {{/card.actions}}
  {{/paper-card}}
{{else}}
  {{#paper-card class='bc-white' as |card|}}
    {{#card.content}}
      <h4>Team 1</h4>
      <div class="d-f">
        <div class="flex-50">
          {{#paper-select
            placeholder="Player 1"
            value=team1Player1
            itemLabelCallback=retrievePlayerName
            onChange=(action (mut team1Player1))}}
            {{#each players as |player|}}
              {{#paper-option value=player}}
                {{player.name}}
              {{/paper-option}}
            {{/each}}
          {{/paper-select}}
        </div>

        <div class="flex-50">
          {{#paper-select
            placeholder="Player 2"
            value=team1Player2
            itemLabelCallback=retrievePlayerName
            onChange=(action (mut team1Player2))}}
            {{#each players as |player|}}
              {{#paper-option value=player}}
                {{player.name}}
              {{/paper-option}}
            {{/each}}
          {{/paper-select}}
        </div>
      </div>

      <h4>Team 2</h4>
      <div class="d-f">
        <div class="flex-50">
          {{#paper-select
            placeholder="Player 1"
            value=team2Player1
            itemLabelCallback=retrievePlayerName
            onChange=(action (mut team2Player1))}}
            {{#each players as |player|}}
              {{#paper-option value=player}}
                {{player.name}}
              {{/paper-option}}
            {{/each}}
          {{/paper-select}}
        </div>
        <div class="flex-50">
          {{#paper-select
            placeholder="Player 2"
            value=team2Player2
            itemLabelCallback=retrievePlayerName
            onChange=(action (mut team2Player2))}}
            {{#each players as |player|}}
              {{#paper-option value=player}}
                {{player.name}}
              {{/paper-option}}
            {{/each}}
          {{/paper-select}}
        </div>
      </div>

    {{/card.content}}
  {{/paper-card}}

  {{#paper-card class='bc-white' as |card|}}
    {{#card.content}}
      <h4>Previous Records</h4>
      {{#if gamesAgainst.isPending}}
        {{paper-progress-circular}}
      {{else}}
        <div class="md-text-items">
          {{#if gamesAgainst.content.length}}
            <p>{{mostRecent.winningTeam.player1.displayName}} & {{mostRecent.winningTeam.player2.displayName}} won {{mostRecent.winningTeamWins}} - {{mostRecent.losingTeamWins}}</p>
            <small class="pr-16 d-b mb-8 ta-r"><i>{{moment-format mostRecent.time "MMM. Do, YYYY @ h:mm a"}}</i></small>
          {{else}}
            {{#if (and team1Player1 team1Player2 team2Player1 team2Player2)}}
              <p>New matchup!</p>
            {{/if}}
          {{/if}}
        </div>
      {{/if}}
    {{/card.content}}

    {{#card.actions}}
      {{#paper-button onClick=(action 'cancelGame') param=model}}Cancel{{/paper-button}}
      {{#paper-button raised=true primary=true disabled=cannotStart onClick=(action 'startGame')}}Start{{/paper-button}}
    {{/card.actions}}
  {{/paper-card}}
{{/if}}
