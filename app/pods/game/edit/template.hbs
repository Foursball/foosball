{{#paper-content class="md-padding"}}
  {{#paper-card}}
    {{#paper-card-content}}
    <h4>{{model.team1.player1.displayName}} & {{model.team1.player2.displayName}} Wins</h4>
    <p>{{paper-input type="number" value=model.team1WinsBlack label="Black"}} {{paper-input type="number" value=model.team1WinsYellow label="Yellow"}}</p>
    <h4>{{model.team2.player1.displayName}} & {{model.team2.player2.displayName}} Wins</h4>
    <p>{{paper-input type="number" value=model.team2WinsBlack label="Black"}} {{paper-input type="number" value=model.team2WinsYellow label="Yellow"}}</p>

    <div class="md-actions" layout="row" layout-align="end center">
      {{#paper-button action="cancelGame" param=model}}{{cancelOrDelete}}{{/paper-button}}
      {{#paper-button raised=true primary=true param=model action="saveGame" disabled=cannotStart}}Save{{/paper-button}}
    </div>
    {{/paper-card-content}}
  {{/paper-card}}
{{/paper-content}}
